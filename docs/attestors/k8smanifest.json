{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/in-toto/go-witness/attestation/k8smanifest/attestor",
  "$ref": "#/$defs/Attestor",
  "$defs": {
    "Attestor": {
      "properties": {
        "serversidedryrun": {
          "type": "boolean",
          "title": "Server Side Dry Run",
          "description": "Perform server-side dry-run to normalize resource defaults"
        },
        "recordclusterinfo": {
          "type": "boolean",
          "title": "Record Cluster Info",
          "description": "Record information about the Kubernetes cluster"
        },
        "kubeconfig": {
          "type": "string",
          "title": "Kubeconfig Path",
          "description": "Path to kubeconfig file"
        },
        "kubecontext": {
          "type": "string",
          "title": "Context",
          "description": "Kubernetes context to use"
        },
        "ignorefields": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "title": "Ignore Fields",
          "description": "Additional ephemeral fields to remove"
        },
        "ignoreannotations": {
          "items": {
            "type": "string"
          },
          "type": "array",
          "title": "Ignore Annotations",
          "description": "Additional ephemeral annotations to remove"
        },
        "recordeddocs": {
          "items": {
            "$ref": "#/$defs/RecordedObject"
          },
          "type": "array",
          "title": "Recorded Docs",
          "description": "Kubernetes manifests with ephemeral data removed"
        },
        "clusterinfo": {
          "$ref": "#/$defs/ClusterInfo",
          "title": "Cluster Info",
          "description": "Information about the Kubernetes cluster"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "clusterinfo"
      ]
    },
    "ClusterInfo": {
      "properties": {
        "server": {
          "type": "string",
          "title": "Server",
          "description": "Kubernetes API server URL"
        },
        "nodes": {
          "additionalProperties": {
            "$ref": "#/$defs/RecordedNode"
          },
          "type": "object",
          "title": "Nodes",
          "description": "Information about cluster nodes"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "server",
        "nodes"
      ]
    },
    "NodeSwapStatus": {
      "properties": {
        "capacity": {
          "type": "integer"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "NodeSystemInfo": {
      "properties": {
        "machineID": {
          "type": "string"
        },
        "systemUUID": {
          "type": "string"
        },
        "bootID": {
          "type": "string"
        },
        "kernelVersion": {
          "type": "string"
        },
        "osImage": {
          "type": "string"
        },
        "containerRuntimeVersion": {
          "type": "string"
        },
        "kubeletVersion": {
          "type": "string"
        },
        "kubeProxyVersion": {
          "type": "string"
        },
        "operatingSystem": {
          "type": "string"
        },
        "architecture": {
          "type": "string"
        },
        "swap": {
          "$ref": "#/$defs/NodeSwapStatus"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "machineID",
        "systemUUID",
        "bootID",
        "kernelVersion",
        "osImage",
        "containerRuntimeVersion",
        "kubeletVersion",
        "kubeProxyVersion",
        "operatingSystem",
        "architecture"
      ]
    },
    "RecordedImage": {
      "properties": {
        "reference": {
          "type": "string",
          "title": "Reference",
          "description": "Container image reference"
        },
        "digest": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object",
          "title": "Digest",
          "description": "Image digest if available"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "reference",
        "digest"
      ]
    },
    "RecordedNode": {
      "properties": {
        "name": {
          "type": "string",
          "title": "Name",
          "description": "Name of the Kubernetes node"
        },
        "labels": {
          "additionalProperties": {
            "type": "string"
          },
          "type": "object",
          "title": "Labels",
          "description": "Node labels"
        },
        "nodeInfo": {
          "$ref": "#/$defs/NodeSystemInfo",
          "title": "Node Info",
          "description": "System information about the node"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "name",
        "labels",
        "nodeInfo"
      ]
    },
    "RecordedObject": {
      "properties": {
        "filepath": {
          "type": "string",
          "title": "File Path",
          "description": "Path to the Kubernetes manifest file"
        },
        "kind": {
          "type": "string",
          "title": "Kind",
          "description": "Kubernetes resource type (e.g. Deployment Pod Service)"
        },
        "name": {
          "type": "string",
          "title": "Name",
          "description": "Name of the Kubernetes resource"
        },
        "data": {
          "title": "Data",
          "description": "Cleaned manifest data with ephemeral fields removed"
        },
        "subjectkey": {
          "type": "string",
          "title": "Subject Key",
          "description": "Unique key for this resource used as attestation subject"
        },
        "recordedimages": {
          "items": {
            "$ref": "#/$defs/RecordedImage"
          },
          "type": "array",
          "title": "Recorded Images",
          "description": "Container images found in the manifest"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "filepath",
        "kind",
        "name",
        "data",
        "subjectkey",
        "recordedimages"
      ]
    }
  }
}
 