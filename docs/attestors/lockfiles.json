{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$ref": "#/$defs/Attestor",
  "$defs": {
    "Attestor": {
      "properties": {
        "lockfiles": {
          "items": {
            "$ref": "#/$defs/LockfileInfo"
          },
          "type": "array",
          "title": "Lockfiles",
          "description": "List of discovered dependency lockfiles"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "lockfiles"
      ]
    },
    "DigestSet": {
      "additionalProperties": {
        "type": "string"
      },
      "type": "object"
    },
    "LockfileInfo": {
      "properties": {
        "filename": {
          "type": "string",
          "title": "Filename",
          "description": "Name of the lockfile (e.g. package-lock.json go.sum)"
        },
        "content": {
          "type": "string",
          "title": "Content",
          "description": "Full content of the lockfile"
        },
        "digest": {
          "$ref": "#/$defs/DigestSet",
          "title": "Digest",
          "description": "Cryptographic digests of the lockfile content"
        }
      },
      "additionalProperties": false,
      "type": "object",
      "required": [
        "filename",
        "content",
        "digest"
      ]
    }
  }
}
 